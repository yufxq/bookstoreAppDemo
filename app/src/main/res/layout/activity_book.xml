<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layer_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="#ffffffff" >


    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_border_f1"
        android:hint="@string/title_hint"
        android:textColor="#ff4499aa"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_border_f1"
        android:hint="@string/author_hint"
        android:textColor="#ff4499aa"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_border_f1"
        android:hint="@string/price_hint"
        android:inputType="number"
        android:textColor="#ff4499aa"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_border_f1"
        android:hint="@string/publisher_hint"
        android:textColor="#ff4499aa"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btn_add"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff008888"
        android:textColor="#ffffff00"
        android:text="@string/add_button" />
    <include layout="@layout/a_listview" />

    <zrc.widget.ZrcListView
        android:id="@+id/lst_books"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </zrc.widget.ZrcListView>

</LinearLayout>